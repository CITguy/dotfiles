# Configuration for Wiimote use as NES Controller Style

Wiimote.A	= KEY_A
Wiimote.B	= KEY_B

Wiimote.Up	= KEY_LEFT
Wiimote.Down	= KEY_RIGHT
Wiimote.Left	= KEY_DOWN
Wiimote.Right	= KEY_UP

# Select
Wiimote.Minus	= KEY_SPACE
# Start
Wiimote.Plus	= KEY_PAUSE
# Escape / END
Wiimote.Home	= KEY_ESC

Wiimote.1	= KEY_Z
Wiimote.2	= KEY_X

