[alias]
  dif = diff
  gr = log --graph
  go = log --graph --pretty=oneline --abbrev-commit
  st = status
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[core]
	editor = vim

[color]
	ui = true

[format]
	pretty = oneline
